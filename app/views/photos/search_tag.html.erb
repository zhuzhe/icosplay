<%= content_for :head do %>
    <%= stylesheet_link_tag 'photo/search_tag' %>
<% end %>
<div class="wrapper">
  <div class="main">
    <div id="canvas">
      <div class="nav_second">
        <h2><%= "标签:#{@tag_name}" %></h2>
      </div>
      <ul>
        <% @photos.each do |photo| %>
            <li>
              <div>
                <%= link_to photo do %>
                    <%= image_tag photo.id2thumb_relative_path %>
                <% end %>
              </div>
            </li>
        <% end %>
      </ul>

      <div class="pages">
        <%= will_paginate @photos, :previous_label => '<', :next_label => '>', :page_links => false %>
      </div>
    </div>


  </div>

  <%= render :partial => "welcome/right", :locals => {:tags => @pop_tags}%>

  </div>

</div>