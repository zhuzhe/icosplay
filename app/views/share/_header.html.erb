<div class="header">
  <h1>
    <%= link_to 'Icosplay', root_path %>
  </h1>

  <div class="nav">
    <ul>
      <li><%= link_to 'Cos Show' %> </li>
      <li><%= link_to 'Coser' %> </li>
    </ul>
  </div>

  <div class="person">
    <ul>
      <% unless login? %>
          <li>
            <%= link_to '请登陆', login_path %>
          </li>
      <% else %>
          <% user = current_user %>
          <li>
            <%= link_to user.name, user %>
          </li>
          <li>
            <%= link_to '退出', logout_path %>
          </li>
      <% end %>
    </ul>
  </div>
</div>