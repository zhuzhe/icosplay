<%= content_for :head do %>
    <%= stylesheet_link_tag 'user/list' %>
<% end %>

<ul class="user_list">
  <% users.each do |user| %>
      <li class="user">
        <div class="avatar">
          <%= link_to user do %>
              <%= image_tag user.avatar.url %>
          <% end %>
        </div>
        <div class="info">
          <div class="name">
            <%= link_to user.name, user %>
          </div>
          <div class="sex">
            <%= h "#{user.sex_text}(#{user.age}岁)" %>
          </div>
        </div>
      </li>
  <% end %>
</ul>