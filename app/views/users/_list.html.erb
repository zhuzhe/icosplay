<%= content_for :head do %>
    <%= stylesheet_link_tag 'user/list' %>
<% end %>

<ul class="user_list">
  <% users.each do |user| %>
      <li class="user">
        <div class="avatar">
          <%= link_to user do %>
              <%= image_tag user.avatar.url %>
          <% end %>
        </div>
        <div class="info">
          <div class="name">
            <%= link_to user.name, user %>
          </div>
          <div class="sex">
            <%= h "#{user.sex_text}(#{user.age})" %>
          </div>
          <div class="city">
            <%= h user.city.name %>
          </div>
          <div class="tags">
            <span>个人标签：</span>
            <% user.tags.each do |tag| %>
                <%= link_to tag.name, by_tag_tag_users_path(tag) %>
            <% end %>
          </div>
        </div>
      </li>
  <% end %>
</ul>